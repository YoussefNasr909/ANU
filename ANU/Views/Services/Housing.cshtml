@model Service
@{
    ViewData["Title"] = "Student Housing";
    ViewData["HeaderClass"] = "sub-header";
    ViewData["HeaderContent"] = "<h1>Student Housing</h1>";
}

<section class="about-us">
    <div class="row">
        <div class="about-col">
            <h1>Student Housing</h1>
            <p>Assiut University provides comfortable and secure housing options for students. Our dormitories are designed to create a supportive living and learning environment.</p>
            
            <h3>Housing Options</h3>
            <ul>
                <li>Single rooms</li>
                <li>Double rooms</li>
                <li>Apartment-style units</li>
            </ul>
            
            <h3>Amenities</h3>
            <ul>
                <li>Wi-Fi connectivity</li>
                <li>Study areas</li>
                <li>Dining facilities</li>
                <li>Laundry services</li>
                <li>Recreation rooms</li>
            </ul>
            
            <h3>Application Process</h3>
            <p>Housing applications open each semester. Priority is given to first-year and international students.</p>
            
            <a href="#" class="btn">Apply for Housing</a>
        </div>
        <div class="about-col">
            <img src="~/css/anu/housing.jpg">
        </div>
    </div>
</section>
