@model LoginViewModel
@{
    ViewData["Title"] = "Login";
    ViewData["HeaderClass"] = "sub-header";
    ViewData["HeaderContent"] = "<h1>Login</h1>";
}

<section class="about-us">
    <div class="row">
        <div class="about-col">
            <h1>Login to Your Account</h1>
            <form asp-controller="Account" asp-action="Login" method="post">
                <div class="form-group">
                    <label asp-for="Email"></label>
                    <input asp-for="Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Password"></label>
                    <input asp-for="Password" class="form-control" />
                    <span asp-validation-for="Password" class="text-danger"></span>
                </div>

                <div class="form-group">
                    <div class="checkbox">
                        <label>
                            <input asp-for="RememberMe" /> @Html.DisplayNameFor(m => m.RememberMe)
                        </label>
                    </div>
                </div>

                <button type="submit" class="btn">Login</button>
            </form>

            <div class="additional-links">
                <p>Don't have an account? <a asp-controller="Account" asp-action="Register">Register</a></p>
            </div>
        </div>
        <div class="about-col">
            <img src="~/css/anu/campus1.jpg">
        </div>
    </div>
</section>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
