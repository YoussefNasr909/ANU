@model IEnumerable<Department>
@{
    ViewData["Title"] = "Departments";
    ViewData["HeaderClass"] = "sub-header";
    ViewData["HeaderContent"] = "<h1>Departments</h1>";
}

<section class="fac">
    <h1>Departments in @ViewBag.FacultyName</h1>
    <p>Explore our academic departments and their specialized programs</p>
    
    <div class="row">
        @foreach (var department in Model)
        {
            <div class="fac-col">
                <h3>@department.Name</h3>
                <p>@department.Description</p>
                <a asp-controller="Departments" asp-action="Details" asp-route-id="@department.Id" class="btn">Learn More</a>
            </div>
        }
    </div>
</section>
